<% provide(:title, current_user.name.capitalize) %>

<br>
<div class="container">
  <div class="col-md-4 col-md-offset-4">
    <h1><%= "#{@user.name.capitalize}'s Events" %></h1>
  </div>

  <div class="col-md-2 col-md-offset-2">
    <%= link_to "Create Event", new_event_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="col-md-12">
  <% if @user.events.any? %>
    <ol class="users">
      <% @user.events.each do |e| %>
        <li class="list-group-item indent-20 party-link"><%= link_to e.description, e %></li>
      <% end %>
    </ol>
    <%= will_paginate @events %>
  <% end %>
</div>